@using System.Web.Configuration
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Conditiemeting</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/"/>
     
</head>
<body class="no-bgimg no-footer">
    <section id="newheader">
        <div class="container">
            <div class="row">
                <nav id="nav-secondary" class="col-md-12 clearfix">
                    <ul class="pull-right">
                        <li>
                            <div class="user">
                                <i class="fa fa-user"></i> @User.Identity.Name
                            </div>
                        </li>
                        <li>
                            <a href="@Url.Action("SignOut", "Account")" class="sign-out" title="Afmelden">
                                <i class="fa fa-sign-out"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div id="logo" class="col-md-12">
                    <div>
                        <a href="#" class="logo-vmsw" title="Vlaamse Maatschappij voor Sociaal Wonen - VMSW">
                            <img src="~/static/assets/img/logo-vmsw.svg">
                        </a>
                        <a href="#" class="logo-flanders" title="Vlaanderen is Sociaal Wonen">
                            <img src="~/static/assets/img/logo-flanders.svg">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-xs-10">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/" class="home" title="VMSW home">
                                <i class="fa fa-home"></i>
                            </a>
                        </li>
                    </ol>
                </div>
                <div class="actions col-sm-3 col-xs-2 clearfix">
                    <ul class="pull-right">
                        <li class="hidden-xs hidden">
                            <a href="javascript:window.print()">
                                <i class="fa fa-print"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </section>
    <section class="container main">
        @RenderBody()
    </section>
      
    <script src="../static/main.js"></script>
    

    @if (WebConfigurationManager.AppSettings["EnableTracking"] == "true")
    {
        <script type="text/javascript">
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;
            m.parentNode.insertBefore(a, m);
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-35664387-8', 'auto');
        ga('send', 'pageview');
        </script>
    }
</body>
</html>
